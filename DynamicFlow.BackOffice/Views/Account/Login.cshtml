@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login - Dynamic Flow Backoffice</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<style>
		body {
			background-color: #dde1f3;
		}

		.login-container {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		.login-box {
			background-color: white;
			padding: 30px;
			border-radius: 10px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
			width: 450px;
			text-align: center;
		}

		.login-option {
			background-color: #0c4a6e;
			color: white;
			padding: 20px;
			border-radius: 10px;
			margin-bottom: 20px;
		}

			.login-option img {
				width: 50px;
			}

		.login-btn {
			width: 100%;
			background-color: #0c4a6e;
			border: none;
		}
	</style>
</head>
<body>

	<div class="login-container">
		<div class="login-box">
			<h4 class="mb-4">Dynamic Flow Backoffice</h4>
			<form id="loginForm">
				<div class="login-option">
					<img src="https://cdn-icons-png.flaticon.com/512/456/456212.png" alt="Login">
					<p></p>
					<input type="text" class="form-control mb-2" placeholder="Enter username" required>
					<input type="password" class="form-control mb-2" placeholder="Enter password" required>
				</div>
				<button type="submit" class="btn btn-light w-100" style="background-color:#0c4a6e; color:#ffff">
					Login
				</button>
			</form>
		</div>
	</div>

	<script>
		document.getElementById("loginForm").addEventListener("submit", function (event) {
			event.preventDefault(); // Prevent actual form submission
			window.location.href = "/Flow/CreateFlow"; // Redirect to your view
		});
	</script>

</body>
</html>
